pipeline {
    agent any

    stages {

        stage('Clone Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Loxfxgc/test-week11.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install selenium'
            }
        }

        stage('Run Selenium Test') {
            steps {
                sh 'python3 selenium_test.py'
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
        }
    }
}
